#progress_bar.hidden
	display: none

#progress_bar
	display: block
	position: fixed
	left: 0
	top: 0
	z-index: 10
	width: 100%
	height: 100%

	.shadow-pane
		background shadowPaneColor
		width: 100%
		height: 100%
		text-align: center
		opacity: .5

		.box
			position: relative
			background shadowPaneColor
			width: 100%
			height: 100%
			top: 35%
