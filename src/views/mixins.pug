mixin record(name = 'Name', surname = 'Surname', id = 'ID', description = 'Description')
	.record
		.record-avatar
			img(src=require('../assets/images/avatar.png'))
		.record-data
			.record-name
				span #{name}&nbsp;
				span #{surname}
			.record-id
				span #{id}
			.record-desc
				span #{description}
			.record-sm
				a(href='https://www.facebook.com/appdy.net')
					img(src=require('../assets/images/facebook.png'))
				a(href='https://twitter.com/AppdyApp')
					img(src=require('../assets/images/twitter.png'))
				a(href='https://linkedin.com')
					img(src=require('../assets/images/linkedin.png'))

mixin experiment(experimentClass, name)
	div(class=experimentClass + ' experiment columns three')&attributes(attributes)
		.header
			h3 #{name}
		.context
			.controls
				button.button-primary.insert-action-button Insert Test
				button.button-primary.append-action-button Append Test
			.results
				div Result:
					span.test-time
				div Elements:
					span.test-elements
			.content
				block
